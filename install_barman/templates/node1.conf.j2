[node1]
description = "backup node1"
ssh_command = ssh postgres@10.100.11.116
#Command to connect to postgres-server
conninfo = host=10.100.11.116 user=barman port=5432 dbname=postgres
retention_policy_mode = auto
retention_policy = RECOVERY WINDOW OF 7 days
wal_retention_policy = main
streaming_archiver=on
#Specifying a prefix to be used as $PATH on the host node1
path_prefix = /usr/pgsql-16/bin/
#slot settings
create_slot = auto
slot_name = node1
#Command to stream from postgres-server
streaming_conninfo = host=10.100.11.116 user=barman
#Type of backup performed
backup_method = postgres
archiver = off
